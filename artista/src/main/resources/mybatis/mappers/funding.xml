<mapper namespace="com.mulcam.artista.dao.FundingDAO">
	<!-- 작가가 펀딩 신청 -->
	<insert id="insertApply" parameterType="funding" >
		<![CDATA[
			insert into fundingapp(projTitle, projIntro, projBudget, projArtist, targetFunding, fundingDate, thumbImg, getplace, getplace2, applydate)
			values(#{projTitle}, #{projIntro}, #{projBudget}, #{projArtist}, #{targetFunding}, #{fundingDate}, #{thumbImg}, #{getplace}, #{getplace2}, sysdate())
		]]>
	</insert>
</mapper>

