<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
							"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mulcam.artista.dao.MyPageDAO">
	
	<!-- 회원가입 -->
	<select id="orderList" parameterType="string" resultType="order">
		<![CDATA[
			select * from order where id=#{id} order by orderDate
		]]>
	</select> 
	
	<!-- 회원가입 -->
	<select id="queryorder" parameterType="order" resultType="int">
		<![CDATA[
			select * from order where orderNo=#{orderNo}
		]]>
	</select>
	
		<!-- 회원가입 -->
	<delete id="deleteOrder" parameterType="int" >
		<![CDATA[
			delete from order where orderNo=#{orderNo}
		]]>
	</delete>

</mapper>

